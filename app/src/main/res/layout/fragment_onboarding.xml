<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frg_onboarding__container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/onboarding_view_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_onboarding_screen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_onboarding_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОНЛАЙН ЗАКАЗ"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboarding_screen_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_onboarding_screen_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СделайтезаказонлайнСделайтезаказонлайнСделайтезаказонлайн"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>