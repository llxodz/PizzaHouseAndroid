<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp">

    <ImageView
        android:id="@+id/frg_menu__iv_image_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingEnd="8dp"
        android:src="@drawable/pizza_name_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frg_menu__tv_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingTop="8dp"
        android:text="Пеперрони"
        android:textColor="@color/mainBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/frg_menu__tv_description_product"
        app:layout_constraintStart_toEndOf="@id/frg_menu__iv_image_product"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frg_menu__tv_description_product"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Фирменный соус, пепперони, шампиньоны, моцарелла, зелень"
        android:textColor="@color/mainBlack"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/frg_menu__tv_weight_product"
        app:layout_constraintStart_toEndOf="@+id/frg_menu__iv_image_product"
        app:layout_constraintTop_toBottomOf="@+id/frg_menu__tv_name_product" />

    <TextView
        android:id="@+id/frg_menu__tv_weight_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="700 гр."
        android:textColor="@color/mainBlack"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/frg_menu__iv_image_product"
        app:layout_constraintTop_toBottomOf="@+id/frg_menu__tv_description_product" />

    <TextView
        android:id="@+id/frg_menu__tv_price_product"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_frg_menu_price_product"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="420 Р"
        android:textColor="@color/orange"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/frg_menu__iv_image_product"
        app:layout_constraintTop_toBottomOf="@id/frg_menu__tv_weight_product" />

    <TextView
        android:id="@+id/frg_menu__tv_button_basket_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В корзину"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/frg_menu__tv_weight_product"
        app:layout_constraintStart_toEndOf="@id/frg_menu__tv_price_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:src="@drawable/ic_basket_menu_item"
        app:layout_constraintTop_toBottomOf="@id/frg_menu__tv_weight_product"
        app:layout_constraintStart_toEndOf="@id/frg_menu__tv_button_basket_item"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>